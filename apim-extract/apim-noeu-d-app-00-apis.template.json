{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "LinkedTemplatesBaseUrl": {
      "type": "string"
    },
    "PolicyXMLBaseUrl": {
      "type": "string"
    }
  },
  "resources": [
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/apim-noeu-d-app-00-echo-api-api.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "echo-apiTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'globalServicePolicyTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'productsTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'backendsTemplate')]"
      ]
    },
    {
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('LinkedTemplatesBaseUrl'), '/apim-noeu-d-app-00-vpsolutions-api.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "PolicyXMLBaseUrl": {
            "value": "[parameters('PolicyXMLBaseUrl')]"
          }
        }
      },
      "name": "vpsolutionsTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'namedValuesTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'globalServicePolicyTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'productsTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'backendsTemplate')]"
      ]
    }
  ]
}